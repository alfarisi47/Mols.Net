@model IEnumerable<Mols.Models.Item>

@{
    ViewBag.Title = "View All Items";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
           @Html.DisplayNameFor(model => model.ItemCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockOnHand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockInOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.ItemCode).ToString(), "Details", new { id = item.ItemId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockOnHand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockInOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
    </tr>
}

</table>
